<Page x:Class="DattingLab.UI.Views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <StackPanel Margin="20">
        <TextBox x:Name="NameBox" PlaceholderText="Name" Margin="0,0,0,10"/>
        <DatePicker x:Name="BirthDatePicker" Margin="0,0,0,10"/>
        <TextBox x:Name="InterestsBox" PlaceholderText="Interests" Margin="0,0,0,10"/>
        <TextBox x:Name="DescriptionBox" PlaceholderText="Description" Margin="0,0,0,10"/>
        <Button Content="Choose Photo" x:Name="PhotoButton" Margin="0,0,0,10"/>
        <Button Content="Save" x:Name="SaveButton"/>
    </StackPanel>
</Page>
